-- Key verification and GUI part
local KeySystemUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/MaGiXxScripter0/keysystemv2api/master/ui/xrer_mstudio45.lua"))()
KeySystemUI.New({
    ApplicationName = "Kurohub", -- Your Key System Application Name
    Name = "Kurohub", -- Your Script name
    Info = "If you see any issue with the key, join the discord", -- Info text in the GUI, keep empty for default text.
    DiscordInvite = "https://discord.gg/WNBpnP3VWt" -- Optional.
})

local keyVerified = false

KeySystemUI.OnKeyVerified(function()
    keyVerified = true
    print("Key verified, can load script")
    
    -- Load your script here when the key is verified
    loadstring(game:HttpGet("https://raw.githubusercontent.com/malfume/Kindo/main/azurahub", true))()
end)

repeat task.wait() until KeySystemUI.Finished() or KeySystemUI.Closed

if not keyVerified then
    print("Player closed the GUI or the key was not verified.")
end
