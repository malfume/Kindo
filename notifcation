Frame.Size = UDim2.new(0, 300, 0, 200)

TitleLabel.Parent = Frame
TitleLabel.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
TitleLabel.BorderColor3 = Color3.fromRGB(0, 0, 0)
TitleLabel.BorderSizePixel = 0
